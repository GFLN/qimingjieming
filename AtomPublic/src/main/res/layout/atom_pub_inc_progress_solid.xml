<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/atomPubProgressSolidView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/atom_pub_resColorBackground">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:layout_width="@dimen/atom_pubResDimenLoadingCircularProgressBound"
            android:layout_height="@dimen/atom_pubResDimenLoadingCircularProgressBound"
            android:layout_gravity="center"
            app:cpv_animAutostart="true"
            app:cpv_color="?colorPrimary"
            app:cpv_indeterminate="true"
            app:cpv_thickness="4dp" />
    </FrameLayout>
</merge>