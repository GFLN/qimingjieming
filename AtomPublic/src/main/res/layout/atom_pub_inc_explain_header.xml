<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/explainNameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/atom_pub_ic_explain_scroll"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/explainEvaluateValue"
            style="@style/AtomStyle.RedHugeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            tools:text="@string/atom_pub_resStringExplainEvaluate" />

        <TextView
            android:id="@+id/explainEvaluateDesc"
            style="@style/AtomStyle.GreyTinyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:paddingTop="4dp" />
    </LinearLayout>

    <include layout="@layout/atom_pub_inc_name_base" />
</merge>