<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/atom_pubResColorBaziBackground">

        <!-- 事业 -->
        <TextView
            android:id="@+id/yunShiLabelShiYe"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/atom_pub_resStringExplainDestinyShiYe"
            app:layout_constraintBottom_toBottomOf="@+id/yunShiShiYe"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/yunShiShiYe"
            app:layout_constraintTop_toTopOf="@+id/yunShiShiYe" />

        <TextView
            android:id="@+id/yunShiShiYe"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:minHeight="48dp"
            android:padding="8dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toRightOf="@+id/yunShiLabelShiYe"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="yunShiShiYe" />

        <!-- 学业 -->
        <TextView
            android:id="@+id/yunShiLabelXueYe"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/atom_pubResColorBaziBackground"
            android:gravity="center"
            android:text="@string/atom_pub_resStringExplainDestinyXueYe"
            app:layout_constraintBottom_toBottomOf="@+id/yunShiXueYe"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/yunShiXueYe"
            app:layout_constraintTop_toTopOf="@+id/yunShiXueYe" />

        <TextView
            android:id="@+id/yunShiXueYe"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:minHeight="48dp"
            android:padding="8dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toRightOf="@+id/yunShiLabelXueYe"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yunShiShiYe"
            tools:text="yunShiXueYe" />

        <!-- 财运 -->
        <TextView
            android:id="@+id/yunShiLabelCaiYun"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/atom_pubResColorBaziBackground"
            android:gravity="center"
            android:text="@string/atom_pub_resStringExplainDestinyCaiYun"
            app:layout_constraintBottom_toBottomOf="@+id/yunShiCaiYun"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/yunShiCaiYun"
            app:layout_constraintTop_toTopOf="@+id/yunShiCaiYun" />

        <TextView
            android:id="@+id/yunShiCaiYun"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:minHeight="48dp"
            android:padding="8dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toRightOf="@+id/yunShiLabelCaiYun"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yunShiXueYe"
            tools:text="yunShiCaiYun" />

        <!-- 爱情 -->
        <TextView
            android:id="@+id/yunShiLabelAiQing"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/atom_pubResColorBaziBackground"
            android:gravity="center"
            android:text="@string/atom_pub_resStringExplainDestinyAiQing"
            app:layout_constraintBottom_toBottomOf="@+id/yunShiAiQing"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/yunShiAiQing"
            app:layout_constraintTop_toTopOf="@+id/yunShiAiQing" />

        <TextView
            android:id="@+id/yunShiAiQing"
            style="@style/AtomStyle.BlackNormalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8dp"
            android:minHeight="48dp"
            android:padding="8dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toRightOf="@+id/yunShiLabelAiQing"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yunShiCaiYun"
            tools:text="yunShiAiQing" />

        <!-- 横向分割线 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yunShiShiYe" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yunShiXueYe" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yunShiCaiYun" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <!-- 纵向分割线 -->
        <ImageView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/yunShiLabelShiYe"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@color/atom_pub_resColorDividerRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 四个角的图纹 -->
        <!-- 左上 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/atom_ic_bazi_corner_left_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 右上 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/atom_ic_bazi_corner_right_top"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 右下 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/atom_ic_bazi_corner_right_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <!-- 左下 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/atom_ic_bazi_corner_left_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>