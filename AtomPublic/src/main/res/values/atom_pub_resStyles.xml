<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AtomPubStyle" parent="Theme.AppCompat.Light"></style>

    <style name="AtomPubStyle.BottomLineEditText">
        <item name="colorControlNormal">#FFBBBBBB</item>
        <item name="colorControlActivated">#FFBBBBBB</item>
    </style>

    <style name="AtomPubStyle.NoLineEditText">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="AtomPubStyleKa" parent="AtomStyle.BlackSuperBigText">
        <item name="fontPath">@string/atom_pub_fontPath</item>
    </style>

    <style name="AtomPubStyleKa.Black" parent="AtomPubStyleKa">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/atom_pub_resTextColorBlack</item>
    </style>

    <style name="AtomPubStyleKa.White" parent="AtomPubStyleKa">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AtomPubStyle_Translucent_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>