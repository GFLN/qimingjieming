<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/atom_pub_png_pay_window"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/atom_pub_png_pay_window_slogan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bodySurname"
                style="@style/AtomStyle.BlackNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLength="2"
                android:maxLines="1"
                tools:text="bodySurname" />

            <TextView
                android:id="@+id/bodyDate"
                style="@style/AtomStyle.BlackNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="16dp"
                tools:text="bodyDate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/bodyServiceName"
                style="@style/AtomStyle.RedNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                tools:text="bodyServiceName" />

            <TextView
                android:id="@+id/bodyServicePrice"
                style="@style/AtomStyle.RedNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="16dp"
                tools:text="bodyServicePrice" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/atom_pub_resIdsOK"
        style="@style/AtomPubStyleKa.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/atom_pub_ic_ink_text_red"
        android:gravity="center"
        android:text="@string/atom_pub_resStringPayPay" />
</LinearLayout>