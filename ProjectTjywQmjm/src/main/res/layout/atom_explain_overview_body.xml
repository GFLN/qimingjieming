<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bodyWord"
            style="@style/AtomStyle.BlackBigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLength="3"
            android:paddingRight="8dp"
            android:textStyle="bold"
            tools:text="@string/atom_pub_resStringExplainWord" />

        <TextView
            android:id="@+id/bodyPinYin"
            style="@style/AtomStyle.RedBigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingRight="8dp"
            android:textStyle="bold"
            tools:text="@string/atom_pub_resStringExplainPinYin" />

        <TextView
            style="@style/AtomStyle.BlackBigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:text="@string/atom_pub_resStringExplainWuXing"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bodyWuXing"
            style="@style/AtomStyle.WhiteSmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/atom_pub_ic_elements_earth"
            android:gravity="center"
            android:maxLength="2"
            android:maxLines="1"
            android:text="Wx" />
    </LinearLayout>

    <TextView
        style="@style/AtomStyle.BlackBigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:text="@string/atom_pub_resStringExplainChinese"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bodyContent"
        style="@style/AtomStyle.BlackNormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:paddingTop="4dp" />
</LinearLayout>